{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "removeComments": false,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../../packages/shared/src/*"
            ]
        },
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        "resolveJsonModule": true,
        "allowImportingTsExtensions": false,
        "noEmit": false,
        "isolatedModules": true
    },
    "ts-node": {
        "esm": true,
        "transpileOnly": true,
        "experimentalSpecifierResolution": "node",
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "node"
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}